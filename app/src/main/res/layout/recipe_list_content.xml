<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingRight="@dimen/dimen_16_dp"
        android:layout_toLeftOf="@+id/video_image">

        <TextView
            android:id="@+id/step_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_16_dp"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_8_dp"
            android:paddingTop="@dimen/dimen_16_dp"
            android:textColor="@color/redish_brown"
            android:textSize="@dimen/txt_size_18_sp"
            tools:text="@string/step_title" />
    </LinearLayout>

    <ImageView
        android:id="@+id/video_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_movie"
        android:layout_marginRight="14dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginBottom="@dimen/dimen_16_dp"
        android:layout_alignBottom="@+id/message_container"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp" />

</RelativeLayout>