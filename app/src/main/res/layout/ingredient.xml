<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/ingredient_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="This is the first ingredient"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/redish_brown"
        android:textSize="@dimen/txt_size_16_sp"
        android:paddingTop="@dimen/dimen_8_dp"
        android:paddingBottom="@dimen/dimen_8_dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.026" />

    <TextView
        android:id="@+id/ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30 G"
        android:textColor="@color/dark_green"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="@dimen/dimen_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_description"
        app:layout_constraintHorizontal_bias="0.192" />
</android.support.constraint.ConstraintLayout>